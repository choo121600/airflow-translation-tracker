{
  "functions": {
    "api/**/*.js": {
      "runtime": "@vercel/node@3.0.7"
    }
  },
  "rewrites": [
    {
      "source": "/:owner/:repo",
      "destination": "/api/:owner/:repo"
    },
    {
      "source": "/:owner/:repo/:lang", 
      "destination": "/api/:owner/:repo/:lang"
    },
    {
      "source": "/:owner/:repo/all",
      "destination": "/api/:owner/:repo/all"
    }
  ]
}